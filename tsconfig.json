{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./dist",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "ES2015"
    },
    "include": [
        "src/**/*",
        "types/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        ".parcel-cache"
    ]
}